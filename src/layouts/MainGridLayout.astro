---
import BackToTop from "@components/control/BackToTop.astro";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import SideBar from "@components/widget/SideBar.astro";
import type { MarkdownHeading } from "astro";
import { Icon } from "astro-icon/components";
import ImageWrapper from "../components/misc/ImageWrapper.astro";
import TOC from "../components/widget/TOC.astro";
import { siteConfig } from "../config";
import {
	BANNER_HEIGHT,
	BANNER_HEIGHT_EXTEND,
	MAIN_PANEL_OVERLAPS_BANNER_HEIGHT,
} from "../constants/constants";
import Layout from "./Layout.astro";

interface Props {
	title?: string;
	banner?: string;
	description?: string;
	lang?: string;
	setOGTypeArticle?: boolean;
	headings?: MarkdownHeading[];
}

const {
	title,
	banner,
	description,
	lang,
	setOGTypeArticle,
	headings = [],
} = Astro.props;
const hasBannerCredit =
	siteConfig.banner.enable && siteConfig.banner.credit.enable;
const hasBannerLink = !!siteConfig.banner.credit.url;

const mainPanelTop = siteConfig.banner.enable
	? `calc(${BANNER_HEIGHT}vh - ${MAIN_PANEL_OVERLAPS_BANNER_HEIGHT}rem)`
	: "5.5rem";
---

<Layout title={title} banner={banner} description={description} lang={lang} setOGTypeArticle={setOGTypeArticle}>

  

    <slot slot="head" name="head"></slot>

    <div id="top-row" class="z-50 pointer-events-none relative transition-all duration-700 max-w-[var(--page-width)] px-0 md:px-4 mx-auto">
        <div id="navbar-wrapper" class="pointer-events-auto sticky top-0 transition-all">
            <Navbar></Navbar>
        </div>
    </div>

    <div class="absolute w-full z-30 pointer-events-none" style={`top: ${mainPanelTop}`}>
        <div class="relative max-w-[var(--page-width)] mx-auto pointer-events-auto">
            <div id="main-grid" class="transition duration-700 w-full left-0 right-0 grid grid-cols-[17.5rem_auto] grid-rows-[auto_1fr_auto] lg:grid-rows-[auto] mx-auto gap-4 px-0 md:px-4">

                <SideBar class="mb-4 row-start-2 row-end-3 col-span-2 lg:row-start-1 lg:row-end-2 lg:col-span-1 lg:max-w-[17.5rem] onload-animation" headings={headings}></SideBar>

                <main id="swup-container" class="transition-swup-fade col-span-2 lg:col-span-1 overflow-hidden">
                    <div id="content-wrapper" class="onload-animation">
                        <slot></slot>

                        <div class="footer col-span-2 onload-animation hidden lg:block mt-8 mb-4">
                            <Footer></Footer>
                            <div class="flex justify-center gap-6 text-neutral-400 text-xs mt-2 opacity-60">
                                <span id="busuanzi_container_site_pv" style="display:none;">
                                    <Icon name="material-symbols:analytics-outline-rounded" class="inline text-base align-text-bottom mr-1" />
                                    总访问量 <span id="busuanzi_value_site_pv" class="font-bold"></span>
                                </span>
                                <span id="busuanzi_container_site_uv" style="display:none;">
                                    <Icon name="material-symbols:person-outline-rounded" class="inline text-base align-text-bottom mr-1" />
                                    总访客 <span id="busuanzi_value_site_uv" class="font-bold"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </main>

                <div class="footer col-span-2 onload-animation block lg:hidden pb-8">
                    <Footer></Footer>
                    <div class="flex justify-center gap-4 text-neutral-400 text-xs mt-2 opacity-60">
                        <span id="busuanzi_container_site_pv" style="display:none;">
                            PV <span id="busuanzi_value_site_pv"></span>
                        </span>
                        <span id="busuanzi_container_site_uv" style="display:none;">
                            UV <span id="busuanzi_value_site_uv"></span>
                        </span>
                    </div>
                </div>
            </div>

            <BackToTop></BackToTop>
        </div>
    </div>

<script is:inline src="https://busuanzi.9420.ltd/js/busuanzi.pure.mini.js" data-astro-rerun></script>


</Layout>
